@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <div class="container select-container">
            <div class="row align-items-start">
                <div class="col-2 select-container__label">Выберите страну:</div>
                <select class="form-select col-4" name="region">
                    <option value="RU">Russia</option>
                    <option value="EU">France</option>
                    <option value="EU">Germany</option>
                    <option value="OTHER">USA</option>
                    <option value="OTHER">India</option>
                </select>
            </div>
        </div>
        <div class="col-2">Текст для оценки:</div>
        <div class="col-10">
            <textarea name="text" rows="5" cols="50"></textarea>
            <input type="submit" />
        </div>
    </form>
</div>